= title t('pending_reviews.index.title')

= box do
  .text-center.py-8
    .mb-6
      %svg.mx-auto.h-12.w-12.text-red-600{viewBox: "0 0 24 24", fill: "none", stroke: "currentColor"}
        %path{stroke_linecap: "round", stroke_linejoin: "round", stroke_width: "2", d: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"}

    %h2.text-2xl.font-bold.mb-4.text-gray-900
      = t('pending_reviews.index.confirm_deletion', count: @count)

    %p.text-gray-600.mb-2
      = t('pending_reviews.index.filter_was', filter: @filter)

    %p.text-sm.text-gray-500.mb-8
      = t('pending_reviews.index.warning')

    .flex.justify-center.gap-4
      = button_to t('pending_reviews.index.confirm_delete'), destroy_confirmed_pending_reviews_path, method: :delete, class: 'button danger px-6 py-3'
      = link_to t('pending_reviews.index.cancel'), pending_reviews_path, class: 'button primary px-6 py-3'
