- box_content = capture do
  = box padding: false, class: 'h-full' do
    .flex.justify-between.h-full
      .px-4.py-5.sm:px-6
        .flex.items-baseline.gap-1
          - if name?
            = name
          - else
            = content
            .text-xl.font-bold= word.name
        .text-xs.font-light.mt-3= description? ? description : word.meaning

      .p-1.pr-4.flex.items-center.object-cover
        - if word.image.attached?
          = image_tag word.image.variant(:thumb), class: 'w-24 h-full object-cover'
        - else
          .w-24.h-24

- unless menu
  = link_to url, data: { turbo_frame: '_top' }, id: dom_id(word) do
    = box_content
- else
  = box_content
